<%
  meta title: "Contact | Crossroads Global Solutions"
       description:'Have a question? 1-855-422-0052 | questions@crossroadsglobalsolutions.com'
%>

<div class='container'>
  <h1 class='center-align'>Contact</h1>
  <br />
  <div class='container'>
    <div class="card white z-depth-1">
      <div class="card-content grey-text text-darken-2">
        <span class="card-title">
          We are here to help. Let us know if you have any questions or concerns.
          Use the form below to send a message.
        </span>
        <%= form_tag('/send_message', method: 'post') do %>
          <%= token_tag nil %>
          <input name='authenticity_token'
                 type='hidden'
                 value="<%= form_authenticity_token %>"/>
          <label for='name'>Name *</label>
          <input name='name' type='text' placeholder='Name' required=true>
          <br />
          <label for='email'>Email *</label>
          <input name='email' type='email' placeholder='Email' required=true>
          <br />
          <label for='phone'>Phone *</label>
          <input name='phone' type='text' placeholder='Phone' required=true>
          <br />
          <label>Message *</label>
          <textarea id='message' name='message' class='materialize-textarea' required=true>
          </textarea>
          <br /><br />
          <%= submit_tag('SEND', class:'btn btn-large grey-text text-darken-4', style: 'width: 100%;') %>
        <% end %>
      </div>
    </div>
  </div>
  <br /><br />
  <h5 class='center-align'>
    Have a question?
  </h5>
  <br />
  <div class='center-align'>
    <a class='grey-text text-darken-4'
       style='font-size: 120%;'
       href='tel:+18554220052'>
      1-855-422-0052
    </a>
    <br />
    <br />
    <a class='grey-text text-darken-4'
       style='font-size: 120%;'
       href='mailto:questions@crossroadsglobalsolutions.com'>
      questions@crossroadsglobalsolutions.com
    </a>
    <br /><br />
  </div>
</div>

<script>
  $('#message').val('');
  $('#message').trigger('autoresize');
</script>
